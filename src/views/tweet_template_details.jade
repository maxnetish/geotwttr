div.details(data-bind="if: details, visible: details")
    p.tweet-meta(data-bind="if: $data.coordinates")
        button.entity.notoggle(data-bind="click: showOnMapCoord")
            span.tweet-geocode(data-bind="text: geocodeComputed")
    p.tweet-meta(data-bind="if: place && place.bounding_box")
        button.entity.notoggle(data-bind="click: showOnMapPlace")
            span.tweet-near(data-bind="text: place.full_name")
    ul.tweet-media-list(data-bind="foreach: mediaList")
        li.tweet-media-element
            a(target="_blank", data-bind="attr: {href: expandedUrl}")
                img.tweet-media-thumb.notoggle(data-bind="lazyLoadingImage: {container: 'ul#tweet-list', src: thumbnailUrl, checkVisibility: $parent.checkVisibility}")
    p.tweet-meta
        span.tweet-lang(data-bind="visible: lang, text: lang")
        span.tweet-source.notoggle(data-bind="html: source")

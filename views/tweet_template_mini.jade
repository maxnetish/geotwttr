li.li-tweet(data-old-bind="visible: visibleCombined, tweetCustomEvents: $data")
    article
        section.tweet-left
            a.no-decoration.notoggle(data-old-bind="attr: {href: profileUrl}", target="_blank")
                img.avatar.hided(data-old-bind="lazyLoadingImage: {container: 'ul#tweet-list', src: avatarUrl, checkVisibility: checkVisibility}")
        section.tweet-right
            p.tweet-usernames
                a.no-decoration.notoggle(data-old-bind="attr: {href: profileUrl}", target="_blank")
                    span.full-name(data-old-bind="text: realFullName")
                    span.screen-name(data-old-bind="text: realScreenName")
            p.tweet-text(data-old-bind='renderTweetTextContent: $data')
            include tweet_template_details
            p.tweet-meta
                a.no-decoration.notoggle(data-old-bind="attr: {href: statusUrl}", target="_blank")
                    //span.tweet-date(data-old-bind='tweetDate: $data')
                    time.tweet-date(data-old-bind='tweetDate: $data')
                span.retweet-from(data-old-bind="if: isRetweet") RT from
                a.no-decoration.notoggle(data-old-bind="attr: {href: profileOriginalUrl}, if: isRetweet", target="_blank")
                    span.screen-name(data-old-bind="text: orginalScreenName")
            p.tweet-meta(data-old-bind='if: !!nearPlace')
                span Near&nbsp;
                span(data-old-bind='text: nearPlace')

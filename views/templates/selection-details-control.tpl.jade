div#selection-details(data-bind="smoothShowHide: geocoderResults().length")
    div.selection-details-wrapper
        p
            button.details-expand(data-bind="click: expandToggle, visible: geocoderResults().length>1")
                span.icon(data-bind="css: {'icon-plus-square': !expanded(), 'icon-minus-square': expanded()}")
            a(class="address", href="javascript:void 0", data-bind="visible: geocoderFirstResult().geometry, click: function(){positionTo(geocoderFirstResult());}")
                span.details-text-block(data-bind="text: geocoderFirstResult().parsedAddress")
            span.details-text-block(class="address", data-bind="visible: !geocoderFirstResult().geometry")
                span(data-bind="text: geocoderFirstResult().parsedAddress")
            // ko foreach: geocoderRestResult
            span.details-text-block(data-bind="visible: parsedAddress")
                span.tree-mark.icon.icon-angle-left
                a(class="address", href="javascript:void 0", data-bind="click: $parent.positionTo")
                    span(data-bind="text: parsedAddress")
            // /ko

        p.radius-block
            label(for="selection-radius") Radius
            input(type="number", min="1", id="selection-radius", data-bind="textInput: radius")
            span m


